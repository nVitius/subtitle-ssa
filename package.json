{
  "name": "subtitle-ssa",
  "version": "0.1.1",
  "description": "A package for parsing SSA/ASS/Aegisub files which complements srt modules",
  "main": "dist/ssa.bundle.js",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint -c .eslintrc.js --quiet src/* test/*",
    "test": "npm run lint && mocha --reporter spec",
    "test:watch": "mocha --reporter spec --watch",
    "build": "WEBPACK_ENV=build webpack",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "ass",
    "ssa",
    "subtitles",
    "aegisub",
    "substation",
    "alpha"
  ],
  "author": "padraigf (https://github.com/padraigfl)",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-mocha": "^5.0.0",
    "mocha": "^5.0.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.6.0",
    "pre-commit": "^1.2.2",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "pre-commit": [
    "test",
    "build"
  ]
}
